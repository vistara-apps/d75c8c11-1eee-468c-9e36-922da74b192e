# YieldPilot Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# OnchainKit API Key - Get from https://onchainkit.xyz/
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Base Network RPC URL (defaults to public RPC if not set)
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# WalletConnect Project ID (optional, for enhanced wallet connections)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# =============================================================================
# EXTERNAL API KEYS (Optional - for enhanced features)
# =============================================================================

# DeFiPulse API Key (for additional protocol data)
NEXT_PUBLIC_DEFIPULSE_API_KEY=your_defipulse_api_key

# CoinGecko API Key (for token price data)
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug logging (set to 'true' for development)
NEXT_PUBLIC_DEBUG=false

# Enable analytics (set to 'true' to enable Vercel Analytics)
NEXT_PUBLIC_ANALYTICS=true

# =============================================================================
# CACHING & PERFORMANCE (Optional)
# =============================================================================

# Redis for caching (Upstash Redis recommended)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate limiting (requests per minute)
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100

# Health factor warning threshold
NEXT_PUBLIC_HEALTH_FACTOR_WARNING=1.5

# Maximum slippage tolerance (percentage)
NEXT_PUBLIC_MAX_SLIPPAGE=5.0

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable backtesting feature
NEXT_PUBLIC_ENABLE_BACKTESTER=true

# Enable auto-rebalancing
NEXT_PUBLIC_ENABLE_AUTO_REBALANCE=true

# Enable LP compounding
NEXT_PUBLIC_ENABLE_COMPOUNDING=true

# Enable security audit
NEXT_PUBLIC_ENABLE_SECURITY_AUDIT=true

# =============================================================================
# THEME SETTINGS
# =============================================================================

# Default theme (options: default, celo, solana, base, coinbase)
NEXT_PUBLIC_DEFAULT_THEME=default

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry DSN for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# LogRocket app ID for session recording (optional)
NEXT_PUBLIC_LOGROCKET_APP_ID=your_logrocket_app_id

# =============================================================================
# SOCIAL & INTEGRATION
# =============================================================================

# Farcaster client ID (for frame integration)
NEXT_PUBLIC_FARCASTER_CLIENT_ID=your_farcaster_client_id

# Twitter API keys (for social features)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# =============================================================================
# DATABASE (Future use)
# =============================================================================

# Database URL (for future features requiring persistence)
DATABASE_URL=your_database_url

# =============================================================================
# EMAIL & NOTIFICATIONS (Future use)
# =============================================================================

# SMTP configuration for email notifications
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup interval (hours)
BACKUP_INTERVAL=24

# Maximum backup retention (days)
BACKUP_RETENTION_DAYS=30

